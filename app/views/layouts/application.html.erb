<!DOCTYPE html>
<html>
<head>
  <title>Myapp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="user_nav">
  	<% if user_signed_in? %>
  		Signed In as <%= link_to ({:controller=> 'users', :action => 'profile', :user_id => current_user}) do %>
    		<span><%= current_user.email %></span>
  		<% end %> | 
  		<%= link_to "Edit", edit_user_registration_path %>. <br> 
  		Not you? <%= link_to "Sign out", destroy_user_session_path %>
  	<% else %>
  		<%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
  	<% end %>
  </div>
  <div>
 	 <% if user_signed_in? %>
  		<h1> Hi, <%= current_user.email %> </h1>
  	 <% end %>
  
<p style="color: green"><%= flash[:notice] %></p> 

<%= yield %>

</body>
</html>


