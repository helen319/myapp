<% @posts.each do |post| %>
<p><b>Posted by <%= post.user.email %> <%= time_ago_in_words(post.created_at) %> ago</b></p>  
 

<p><%= post.message %></p> 

<td><%= link_to 'Comment', {:controller=> 'comments', :action=> 'new' , :post_id => post} %></td> |
<td><%= link_to 'Show', {:controller=> 'comments', :action=> 'index' , :post_id => post} %></td> |
<td><%= link_to 'Delete', {:controller=> 'posts', :action => 'delete', :id => post },
		 :confirm => 'Are you sure?' %></td>
<% post.comments.each do |c| %>  
	<p>  
		<b>Commenter:</b>  
		<%=h c.user.email %>  
	</p>  
	<p>  
		<b>Comment:</b>  
		<%=h c.body %>  
	</p> 
<% end %> 
<% end %>